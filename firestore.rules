rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow checking if email exists for password recovery (unauthenticated)
    match /users/{userId} {
      // Allow reading user document to check if email exists (for password recovery)
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow unauthenticated users to query users collection to check email existence
      // This is needed for password recovery flow
      allow list: if request.auth == null && 
        request.query.limit <= 1 && 
        request.query.filters.size() == 1 && 
        request.query.filters[0].fieldPath == "email" && 
        request.query.filters[0].op == "==";
      
      // Allow users to write their own user document
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read and write their own plants
      match /plants/{plantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Allow users to read and write logs for their plants
        match /logs/{logId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Allow users to read and write environment data for their plants
        match /environment/{envId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // Allow users to read and write their own reminders
      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // fcmTokens removed (notifications disabled)
    }

    // Archives: allow user to write/read their own archived data
    match /archived_users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /plants/{plantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        match /logs/{logId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
} 