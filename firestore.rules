rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      // Allow users to read and write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read and write their own plants
      match /plants/{plantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Allow users to read and write logs for their plants
        match /logs/{logId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Allow users to read and write environment data for their plants
        match /environment/{envId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // Allow users to read and write their own reminders
      match /reminders/{reminderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Demo mode - allow access for demo user
    match /users/demo-user-123 {
      allow read, write: if true;
      
      match /plants/{plantId} {
        allow read, write: if true;
        
        match /logs/{logId} {
          allow read, write: if true;
        }
        
        match /environment/{envId} {
          allow read, write: if true;
        }
      }
      
      match /reminders/{reminderId} {
        allow read, write: if true;
      }
    }
  }
} 