#!/usr/bin/env bash
# Auto-log to UPDATES.md before the commit is finalized so the file
# can be staged and included in the same commit.
# Enable with: git config core.hooksPath .githooks

MSG_FILE="$1"
if [ -z "$MSG_FILE" ] || [ ! -f "$MSG_FILE" ]; then
  exit 0
fi

SUBJECT=$(head -n1 "$MSG_FILE")

# Determine level
LEVEL=""
case "$SUBJECT" in
  *"[major]"*|*"[MAJOR]"*|feat!*) LEVEL=major ;;
  *"[mid]"*|*"[MID]"*|feat*) LEVEL=mid ;;
  *"[minor]"*|*"[MINOR]"*|fix*|refactor*|perf*|docs*|test*|chore*|ci*) LEVEL=minor ;;
  *) LEVEL="" ;;
esac

[ -z "$LEVEL" ] && exit 0

# Derive description (strip type(scope): prefix if present)
DESC="$SUBJECT"
if echo "$DESC" | grep -E '^[a-z]+(\([^)]+\))?:' >/dev/null 2>&1; then
  DESC=$(echo "$DESC" | sed -E 's/^[a-z]+(\([^)]+\))?:\s*//')
fi

# Generate/update UPDATES.md and stage it
node ./scripts/autolog.mjs "$LEVEL" "$DESC" >/dev/null 2>&1 || exit 0
git add UPDATES.md >/dev/null 2>&1 || true
exit 0

