{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    // Unused variables and imports
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "no-unused-vars": "off", // Turn off base rule to avoid conflicts

    // Other code quality rules
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/ban-ts-comment": "warn",
    "@typescript-eslint/no-require-imports": "warn",
    "@next/next/no-img-element": "warn",
    "react-hooks/exhaustive-deps": "warn",

    // Import organization
    "import/no-unused-modules": "off", // Can be enabled for stricter checking
    "no-console": "warn" // Optional: warn about console.log statements
  }
}